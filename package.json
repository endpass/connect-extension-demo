{
  "name": "connect-extension-demo",
  "version": "0.0.4",
  "description": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/endpass/connect-extension-demo.git"
  },
  "files": [
    "src",
    "dist"
  ],
  "author": "Endpass, Inc",
  "bugs": {
    "url": "https://github.com/endpass/connect-extension-demo/issues"
  },
  "homepage": "https://github.com/endpass/connect-extension-demo",
  "scripts": {
    "dev": "NODE_ENV=development webpack --mode=development --watch --watch-poll",
    "build": "rimraf ./dist && NODE_ENV=production webpack -p",
    "test": "jest",
    "format": "prettier --write './src/**/*.{js,json}' && eslint ./src/**/*.{js} --fix",
    "semantic-release": "semantic-release",
    "commit": "git-cz"
  },
  "lint-staged": {
    "./src/**/*.{js,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "release": {
    "branch": "release",
    "prepare": [
      {
        "path": "@semantic-release/changelog"
      },
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md"
          ]
        }
      ]
    ]
  },
  "publishConfig": {
    "tag": "latest"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@endpass/connect": "^0.26.0-beta",
    "core-js": "3",
    "web3": "1.0.0-beta.37",
    "web3-old": "npm:web3@0.20.7"
  },
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@babel/parser": "^7.5.0",
    "@babel/plugin-transform-runtime": "^7.5.0",
    "@babel/preset-env": "^7.5.4",
    "@babel/runtime": "^7.5.4",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.16",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "commitizen": "^3.1.1",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-prettier": "^3.1.0",
    "file-loader": "4.0.0",
    "fs-extra": "8.1.0",
    "gh-pages": "^2.0.1",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.0",
    "prettier": "^1.18.2",
    "regenerator-runtime": "^0.13.2",
    "rimraf": "^2.6.3",
    "semantic-release": "^15.13.18",
    "style-loader": "^0.23.1",
    "webpack": "^4.35.3",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-chrome-extension-reloader": "^1.3.0",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "3.7.2",
    "write-file-webpack-plugin": "4.5.0"
  }
}
